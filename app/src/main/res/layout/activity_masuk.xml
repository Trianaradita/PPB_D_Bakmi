<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Masuk"
    android:background="@drawable/lalaoren">
    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="150dp"
            app:srcCompat="@drawable/logomi" />
        <LinearLayout
            android:id="@+id/lin1"
            android:layout_below="@id/imageView3"
            android:layout_marginTop="150dp"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:orientation="vertical"
            android:background="@color/white">
            <TextView
                android:id="@+id/judulmasuk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/masukbold"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:paddingLeft="30dp"
                android:paddingTop="30dp" />
            <Spinner
                android:id="@+id/spinnerbahasa"
                android:layout_width="match_parent"
                android:layout_marginTop="50dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_height="wrap_content"
                android:entries="@array/pilihbhsa" />
                <EditText
                    android:id="@+id/editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:layout_marginLeft="70dp"
                    android:paddingLeft="8dp"
                    android:layout_marginRight="30dp"
                    android:ems="10"
                    android:inputType="text"
                    android:hint="email/username"
                    android:textSize="14sp"/>
            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:layout_marginLeft="70dp"
                android:paddingLeft="8dp"
                android:layout_marginRight="30dp"
                android:ems="10"
                android:inputType="numberPassword"
                android:hint="password"
                android:textSize="14sp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/masukya"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="200dp"
                    android:text="@string/masukbold"
                    android:background="@color/orange"/>
                <Button
                    android:id="@+id/masukya2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="230dp"
                    android:layout_marginRight="40dp"
                    android:text="DAFTAR"
                    android:background="@color/orange"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>